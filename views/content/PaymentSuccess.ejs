<%- include('../layout/userHeader') %>

<div class="container">
    <div class="d-block align-middle">
        <div><h3>Your order successfully placed!!</h3></div>
        <%order.forEach((odr)=>{%>
        <div class="card h-100">
            <div class="card-header pb-0">
              <h6 class="text-secondary font-weight-bold">ORDR_<%=order._id%></h6>
              <p class="text-sm">
                Payment status : <span class="font-weight-bold">Top</span>             
                Order status : <span class="font-weight-bold">Top</span>
              </p>
              <div class=" shadow-success border-radius-lg py-3 pe-1 d-flex">
                <!-- bg-gradient-success -->
                <div class="d-block">
                    <h6 class="text-dark text-sm font-weight-bold mb-0"><%=odr.productDetails.product_name%></h6>
                    <p class="text-secondary font-weight-bold text-xs mt-1 mb-0"><%=odr.productDetails.price_unit%></p>
                </div>
                <div>
                    <img src="../upload/<%=odr.productDetails.productImage[0]%>" class="avatar avatar-sm me-3" alt="<%=odr.productDetails.product_name%>">
                </div>
              </div>
            </div>
            <div class="card-body p-3">
                    <p class="text-secondary font-weight-bold text-sm mt-1 mb-0">Quantity : <%=odr.payment%></p>
                    <p class="text-secondary font-weight-bold text-sm mt-1 mb-0">Total : <%=odr.payment%></p>
                    <p class="text-secondary font-weight-bold text-sm mt-1 mb-0">Order Date : <%=odr.payment%></p>
                    <p class="text-secondary font-weight-bold text-sm mt-1 mb-0">Expected Delivery : <%=odr.payment%></p>
                </div>
              
            </div>
            </div>
            <%})%>
        <div class="d-flex justify-space-between">
            <div><a href="/allproducts"><p class="con-but">Continue Shopping</p></a></div>
            <div><a href="/getOrder"><p class="con-but">My Orders</p></a></div>
        </div>
        
    </div>
   

</div>

<%- include('../layout/userFooter') %>