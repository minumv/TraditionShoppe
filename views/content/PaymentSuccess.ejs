<%- include('../layout/userHeader') %>

<div class="container">
    <div class="d-block text-center">
        <div class="mt-2 text-primary"><h5>Your order successfully placed!!</h5></div>
        <%order.forEach((odr)=>{%>
            <% let productList = Array.isArray(odr.product_list) ? odr.product_list : [odr.product_list]; %>
            <% productList.forEach((product) => { %>
        <div class="card h-100">
            <div class="card-header text-center pb-0">
              <h6 class="text-secondary font-weight-bold">ORDR_<%=odr._id%></h6>
              <p class="text-sm">
                Payment status : <span class="text-dark font-weight-bold"><%=product.paymentstatus%></span>             
              </p>
              <div class="d-flex justify-content-center shadow-success border-radius-lg py-3 pe-1 d-flex">
                <!-- bg-gradient-success -->
                
                <div class="d-flex justify-content-center">
                    <img src="../upload/<%=odr.productDetails.images[0]%>" width="100" height="100" alt="<%=odr.productDetails.product_name%>">&nbsp;&nbsp;
                    <div class="d-block">
                        <h6 class="text-dark text-sm font-weight-bold mb-0"><%=odr.productDetails.product_name%></h6>
                        <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">MRP : ₹<%=odr.productDetails.price_unit%></p>
                    </div>
                </div>
              </div>
            </div>
            <%let formattedDate = new Date(product.delivery_date).toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric', year: 'numeric' })%>
            <div class="card-body text-center p-3">
                    <p class="text-secondary text-sm mt-1 mb-0">Quantity : <span class="text-dark font-weight-bold"><%=product.quantity%></span> </p>
                    <p class="text-secondary text-sm mt-1 mb-0">Total : <span  class="text-dark font-weight-bold">₹<%=product.total%></span> </p>                    
                    <p class="text-secondary text-sm mt-1 mb-0">Expected Delivery : <span  class="text-dark font-weight-bold"><%=formattedDate%></span> </p>
                </div>
              
            </div>
            </div>
            <hr>
            <%})%>
            <%})%>
        <div class="d-flex justify-content-around">
            <div><a href="/allproducts"><p class="con-but text-center ms-2">Continue Shopping</p></a></div>
            <div><a href="/getOrder"><p class="con-but text-center me-2">My Orders</p></a></div>
        </div>
        
    </div>
   

</div>

<%- include('../layout/userFooter') %>