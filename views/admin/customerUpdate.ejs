<%- include('../layout/adminHeader') %>
<section>   
      <div class="container">    
        <div class="row">
          <div class="col-6">
            <div class="card card-plain">
              <div class="card-header">
                <h4 class="font-weight-bolder">Customer Details</h4>
                <p class="mb-0"></p>
              </div>
              <div class="card-body">
                <form role="form" action="/update/<%= users._id %>" method="post">
                  <!-- /admin/customer/update/<%= users._id %> -->
                  <div class="input-group input-group-outline mb-3">
                    <!-- <label class="form-label">Name</label> -->
                    <input type="text" class="form-control" value="<%= users.name %>">
                  </div>
                  <div class="input-group input-group-outline mb-3">
                    <!-- <label class="form-label">Email</label> -->
                    <input type="email" class="form-control" value="<%= users.email %>">
                  </div>
                  <div class="input-group input-group-outline mb-3">
                    <!-- <label class="form-label">Mobile</label> -->
                    <input type="text" class="form-control" value="<%= users.phone %>">
                  </div>
                  <div class="input-group input-group-outline mb-3">
                    <!-- <label class="form-label">Address</label> -->
                    <input type="text" class="form-control" value="<%= users.address %>">
                  </div>
                  <div class="text-center d-flex justify-content-end">
                    <button type="submit" formaction="/verify/<%= users._id %>" class="btn btn-lg bg-gradient-success btn-lg w-100 mt-4 mb-0 me-2">Verify</button>
                    <% if (users.status === 'Blocked'){ %>
                      <button type="submit" formaction="/unblock/<%= users._id %>" class="btn btn-lg bg-gradient-warning btn-lg w-100 mt-4 mb-0 me-2">Unblock</button>
                    <% } else { %> 
                      <button type="submit" formaction="/block/<%= users._id %>" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0 me-2">Block</button>
                    <% } %> 
                      <button type="submit" formaction="/delete/<%= users._id %>" class="btn btn-lg bg-gradient-secondary btn-lg w-100 mt-4 mb-0 me-2">Delete</button>
                  </div>
                </form>
              </div>             
            </div>  
          </div>
        </div>   
                   
        </div>   
  </section>


  <%- include('../layout/adminFooter') %>