<%- include('../layout/adminHeader') %>
<div class="row">    
    <div class="col-12">
      <div class="card my-4">
        <div class="card-header p-0 position-relative  mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-2 pb-1 text-center">
            <h6 class="text-white text-capitalize ps-3">Order Details</h6>
          </div>
        </div>
        <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
                <% let action = ''%>
            <% if(orders != '') {%>
                
            <table class="table align-items-center mb-0">
                <thead>
                <tr>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">S.No</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Name</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Delivery Address</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Price</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                </tr>
                </thead>
                <tbody>
                <% orders.forEach((row,index)=>{%>
                <tr>
                    <td>
                        <div class="d-flex px-2 py-1">                          
                          <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm"><%= index+1 %></h6>                          
                          </div>
                        </div>
                      </td>
                    
                    <%users.forEach((user,index)=>{%>
                        <% if(row.user.equals(user._id)){%>                    
                            <td>
                            <p class="text-xs font-weight-bold mb-0" style="width:100px; overflow:hidden ;"><%= user.name %> </p>
                            <!-- <p class="text-xs text-secondary mb-0">Organization</p> -->
                            </td>
                        
                    <%address.forEach((adr,index)=>{%>
                        <% if(row.address.equals(adr._id)){%>    
                            <td class="align-middle  text-sm">                
                                <p class="text-xs font-weight-bold mb-0"><%= adr.house %>,<%= adr.city %>,<%= adr.state %></p>
                            </td>
                        <%}%>
                    <%})%>
                    <td class="align-middle  text-sm" >
                    <p class="text-xs font-weight-bold mb-0" style="width:150px; overflow:hidden ;"><%= row.payment_amount %> </p>
                </td>
                <td class="align-middle  text-sm">
                    <% if (row.orderstatus === 'delivered'){ %>
                        <span class="badge badge-sm bg-gradient-success">delivered</span>
                    <% } else if(row.orderstatus === 'pending') { %> 
                        <span class="badge badge-sm bg-gradient-warning">pending</span> 
                        <% } else if(row.orderstatus === 'cancel request') { %> 
                            <span class="badge badge-sm bg-gradient-warning">cancel request</span>                           
                    <% } else if(row.orderstatus === 'cancelled') { %> 
                        <span class="badge badge-sm bg-gradient-danger">cancelled</span> 
                    <% } else if(row.orderstatus === 'return request') { %> 
                        <span class="badge badge-sm bg-gradient-warning">return request</span>                    
                    <% } else if(row.orderstatus === 'refund received') { %> 
                        <span class="badge badge-sm bg-gradient-success">refund received</span>   
                    <% } else if(row.orderstatus === 'processing') { %> 
                        <span class="badge badge-sm bg-gradient-success">processing</span>   
                    <% } %>    
                </td>
               <% let pdtid = '' %>
               <% let qty = 0  %>

               <% cart.forEach((rows,index)=>{%>
                <%if((rows.user.equals(user._id)) && (rows.status == 'pending')){%>
                    <%rows.product_list.forEach((list)=>{%>
                        <%products.forEach((pdt)=>{%>
                            <%if(list.productId.equals(pdt._id)){%>
                                <% pdtid = pdt._id %>
                                <% qty = list.quantity %>                       
                            <%}%>
                        <%})%>
                    <%})%>
                <%}%>
            <%})%> 

                <td class="align-middle  text-sm">
                   
                    <% if(row.orderstatus === 'shipped') { %>                                               
                        <form action="/orderPending/<%=row._id%><%=pdtid%>/<%=user._id%>/<%=qty%>" method="post"><button  type="submit" class="badge badge-sm bg-gradient-warning">complete</button>  </form>                      
                    <% } else if(row.orderstatus === 'cancel request') { %> 
                        <form action="/cancelapprove/<%=row._id%>" method="post"><button type="submit" class="badge badge-sm bg-gradient-warning">approve cancel</button> </form>
                    <% } else if(row.orderstatus === 'return request') { %> 
                        <form action="/returnapprove/<%=row._id%>" method="post"><button  type="submit" class="badge badge-sm bg-gradient-warning">approve return</button></form>                  
                    <% } else if(row.orderstatus === 'pending') { %> 
                        <% action = 'approve'%>  
                        <form action="/statusChanging/<%=row._id%>/<%= action %>" method="post"><button  type="submit" class="badge badge-sm bg-gradient-warning">approve</button>  </form>                      
                    <% } else if(row.orderstatus === 'processing') { %> 
                        <% action = 'to pack'%>  
                        <form action="/statusChanging/<%=row._id%>/<%= action %>" method="post"><button  type="submit" class="badge badge-sm bg-gradient-warning">To pack</button>  </form>                      
                    <% } else if(row.orderstatus === 'packed') { %> 
                        <% action = 'to dispatch'%>  
                        <form action="/statusChanging/<%=row._id%>/<%= action %>" method="post"><button  type="submit" class="badge badge-sm bg-gradient-warning">To dispatch</button>  </form>                      
                    <% } else if(row.orderstatus === 'dispatched') { %> 
                        <% action = 'to ship'%>  
                        <form action="/statusChanging/<%=row._id%>/<%= action %>" method="post"><button  type="submit" class="badge badge-sm bg-gradient-warning">To ship</button>  </form>                      
                    <% } else if (row.orderstatus === 'delivered' || 'cancelled' || 'refund received'){ %>
                        <span class="badge badge-sm bg-gradient-success">No Action</span>
                    <% }%>






                                          
                </td>
                
                    <td class="align-middle">
                    <a href="/orderDetails/<%= row._id %>" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                    Show more
                    </a>
                    </td>
                    
                </tr>
                <%}%>
                    <%})%>
                <% }) %>
                </tbody>
            </table>

            <% } else {%>
            <h1 class="text-center text-secondary mt-5">No order placed yet!!</h1>
        <% } %>
        </div>
        </div>
    </div>
</div>

</div>

<script>
   function handleRequest(orderid,pdtid,userid,qty) {
    alert("button clicked");
    
    // Get selected values from dropdowns
    const action = $('#adminaction').val();
    console.log("action:" + action);

    // Your fetch code or any other code to handle the button click
    fetch('/getAdminAction', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            adminaction: action
        })
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        // Handle success response
        console.log('Server response:', data);
        applyadmAction(orderid,pdtid,userid,qty);
    })
    .catch(error => {
        console.error('Fetch Error:', error);
    });
}

     function applyadmAction(ordrid,pdtid,userid,qty){
        fetch(`/applyAction/${ordrid}/${pdtid}/${userid}/${qty}`,{
            method:'post',
            headers : {
                'Content-Type' : 'application/json'
            }            
        })
        .then(res=>res.json())
        .then(data=>{
            if( data.success ){
                location.href = '/orderManage'
            } else {
                location.href = '/orderManage'
            }
        })

    }

</script>


<%- include('../layout/adminFooter') %>