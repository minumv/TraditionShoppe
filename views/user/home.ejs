                      <% products.forEach((row, index) => { %>
                          
                          <%if(row.status == 'new' ) {%>
                          
            <div class="item">
              <a href="/viewProduct/<%= row._id %>">
                <div class="block-4 text-center">
                  <figure class="block-4-image ">
                    <img src="../upload/<%= row.images[0]%>" alt="Image placeholder" class="img-fluid" style="height:346px">
                  </figure>
                  <div class="block-4-text p-4">
                    <h3><a class="text-dark font-weight-light text-capitalize justify-content-around" href="#"><%= row.product_name %></a></h3>
                    <div class="d-flex justify-content-around ">
                      <p class=" mb-0 text-danger font-weight-light">RS.<%= row.price_unit %></p>
  
                      <% let mrp = 0; %>
                      <% let per = 0; %>
                        <% discounts.forEach((disc_row, index) => { %>
                            <%console.log(disc_row._id , row.discount)%>
                            <%if(disc_row._id .equals( row.discount )) {%>
                                <% per = disc_row.percentage %>
                                <% mrp = (row.price_unit * (100 - per) * 0.01)  %>
                            <% } %>
                        <% })%>
  
                      <p class="text-black font-weight-light">Rs.<%=mrp %></p>
                    </div>
                    
                  </div>
                </div>
              </a>
              
            </div>
            <% } %>
            <% }) %>
          
          </div>
        </div>
      </div>
    </div>
  </div>

